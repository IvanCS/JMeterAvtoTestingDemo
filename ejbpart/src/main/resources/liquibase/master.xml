            <column name="name" value="sap" />
        </insert>
        
        <insert tableName="departments">			
            <column name="name" value="test" />
        </insert>
        
        <insert tableName="departments">			
            <column name="name" value="hr" />
        </insert>
        
        <insert tableName="departments">			
            <column name="name" value="it" />
        </insert>
    </changeSet>
    
    
