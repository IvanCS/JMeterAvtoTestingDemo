<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    
    <changeSet id="1" author="ivan"  context="create tables">
        <createTable tableName="departments">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="varchar(32)" />
            <column name="leader" type="int">
                <constraints foreignKeyName="leader_fk" references="employees(id)" nullable="true"/>                                                 
            </column>
        </createTable>
                
        <createTable tableName="employees">
            <column name="id" type="int" autoIncrement="true" defaultValue="1">
                <constraints primaryKey="true"  />
            </column>
            <column name="firstName" type="varchar(32)" />
            <column name="lastName" type="varchar(32)" />
            <column name="department" type="int">
                <constraints foreignKeyName="department_fk" references="departments(id)"/>
            </column>
            <column name="position" type="varchar(32)"/>

        </createTable>
    </changeSet>
        
    <changeSet id="2" author="ivan" context="add data">
        <insert tableName="departments">			
            <column name="name" value="java" />
        </insert>
  
        <insert tableName="employees">
            <column name="firstName" value="Дмитрий" />
            <column name="lastName" value="Гусев" />
			
            <column name="department" value="1" />
            <column name="position" value="developer"/>	
        </insert>	
                
        <insert tableName="employees">
            <column name="firstName" value="Ivan" />
            <column name="lastName" value="Petrushin" />
			
            <column name="department" value="1" />
            <column name="position" value="developer"/>	
        </insert>	
    </changeSet>
        
        
    <changeSet id="3" author="dima" context="add table for spring security">
        <createTable tableName="sys_users">
            <column name="id" type="int" >
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="varchar(32)" />
            <column name="password" type="varchar(64)" />
            <column name="userrole" type="varchar(16)" />
        </createTable>
        <insert tableName="sys_users">
            <column name="id" value="0" />
            <column name="login" value="user" />
            <column name="password" value="user" />
            <column name="userrole" value="ROLE_USER" />
        </insert>
        <insert tableName="sys_users">
            <column name="id" value="1" />
            <column name="login" value="admin" />
            <column name="password" value="admin" />
            <column name="userrole" value="ROLE_ADMIN" />
        </insert>
    </changeSet>
        
    <changeSet id="4" author="ivan" context="add table for storing of roles">
        <createTable tableName="roles">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="role_pk" nullable="false"/>
            </column>
                              
            <column name="name"  type="varchar(16)"/>                              
        </createTable>
            
        <insert tableName="roles">
            <column name="name"  value="ROLE_ADMIN"/>  
        </insert>
            
        <insert tableName="roles">
            <column name="name"  value="ROLE_GUEST"/>
        </insert>
                    
        <insert tableName="roles">
            <column name="name"  value="ROLE_USER"/>
        </insert>
                     
    </changeSet>
        
    <changeSet id="5" author="ivan" context="change of sys_users table">
        <modifyDataType tableName="sys_users" columnName="userrole" newDataType="int"/>
            
        <addForeignKeyConstraint baseTableName="sys_users" 
                                     baseColumnNames="userrole" 
                                     constraintName="role_fk" 
                                     referencedTableName="roles" 
                                     referencedColumnNames="id" />

                
        <insert tableName="sys_users">
            <column name="userrole" value="1"/>         
        </insert>
    </changeSet>
        
</databaseChangeLog>