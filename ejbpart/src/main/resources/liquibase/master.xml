    <changeSet id="4" author="ivan" context="create tables">
        <createTable tableName="roles">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="role_pk" />
            </column>
                              
            <column name="name"  type="varchar(16)"/>                              
        </createTable>
            
       
    </changeSet>

    <changeSet id="5" author="dima" context="create tables">
        <createTable tableName="sys_users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="login" type="varchar(32)" />
            <column name="password" type="varchar(64)" />
            <column name="role_id" type="int" />
        </createTable>
        
        <addForeignKeyConstraint baseTableName="sys_users" 
                                 baseColumnNames="role_id" 
                                 constraintName="role_fk" 
                                 referencedTableName="roles" 
                                 referencedColumnNames="id" />
        
    </changeSet>
       
        
